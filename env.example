# Development keys
USE_MOCK_SUGGESTIONS=false # switch if using Mistral
MISTRAL_DRY_RUN=false # use pre-made mocks for Mistral answer

# Required for NextAuth.js
NEXTAUTH_URL=https://your-app-name.vercel.app
AUTH_SECRET=your-nextauth-secret-at-least-32-characters-long

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys for Search Features
MISTRAL_API_KEY=your-mistral-api-key # currently preferred suggestions provider
EXA_API_KEY=your-exa-api-key # currently preferred search results provider

# Optional Search APIs
PERPLEXITY_API_KEY=your-perplexity-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key

GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-google-search-engine-id

# Optional Supabase (if using database features)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Environment
NODE_ENV=production
